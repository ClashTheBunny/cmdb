
INGRESS_CHAIN = INPUT

[iptables]
# Protect BGP peering with s-spines
-A $INGRESS_CHAIN --in-interface swp31s0.100 -s 100.71.238.61 -d 100.71.238.60 -p tcp --dport 179 -j SETCLASS --class 7
-A $INGRESS_CHAIN -s 100.71.238.61 -d 100.71.238.60 -p tcp --dport 179 -j POLICE --set-mode pkt --set-rate 2000 --set-burst 2000

-A $INGRESS_CHAIN --in-interface swp31s0.100 -s 100.71.238.61 -d 100.71.238.60 -p tcp --sport 179 -j SETCLASS --class 7
-A $INGRESS_CHAIN -s 100.71.238.61 -d 100.71.238.60 -p tcp --sport 179 -j POLICE --set-mode pkt --set-rate 2000 --set-burst 2000

-A $INGRESS_CHAIN --in-interface swp31s0.100 -s 100.71.238.61 -d 100.71.238.60 -p icmp -j SETCLASS --class 2
-A $INGRESS_CHAIN -s 100.71.238.61 -d 100.71.238.60 -p icmp -j POLICE --set-mode pkt --set-rate 100 --set-burst 40

-A $INGRESS_CHAIN --in-interface swp31s0.100 -j DROP

-A $INGRESS_CHAIN --in-interface swp32s0.100 -s 100.71.238.63 -d 100.71.238.62 -p tcp --dport 179 -j SETCLASS --class 7
-A $INGRESS_CHAIN -s 100.71.238.63 -d 100.71.238.62 -p tcp --dport 179 -j POLICE --set-mode pkt --set-rate 2000 --set-burst 2000

-A $INGRESS_CHAIN --in-interface swp32s0.100 -s 100.71.238.63 -d 100.71.238.62 -p tcp --sport 179 -j SETCLASS --class 7
-A $INGRESS_CHAIN -s 100.71.238.63 -d 100.71.238.62 -p tcp --sport 179 -j POLICE --set-mode pkt --set-rate 2000 --set-burst 2000

-A $INGRESS_CHAIN --in-interface swp32s0.100 -s 100.71.238.63 -d 100.71.238.62 -p icmp -j SETCLASS --class 2
-A $INGRESS_CHAIN -s 100.71.238.63 -d 100.71.238.62 -p icmp -j POLICE --set-mode pkt --set-rate 100 --set-burst 40

-A $INGRESS_CHAIN --in-interface swp32s0.100 -j DROP


